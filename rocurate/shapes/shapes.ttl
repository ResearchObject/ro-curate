@base <.> .
@prefix :       <.> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:	<http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh:	    <http://www.w3.org/ns/shacl#> .
@prefix xsd:	<http://www.w3.org/2001/XMLSchema#> .
@prefix pav:    <http://purl.org/pav/> .
@prefix ao:     <http://purl.org/ao/> .
@prefix oa:     <http://www.w3.org/ns/oa#> .
@prefix dc:     <http://purl.org/dc/elements/1.1/> .
@prefix dct:    <http://purl.org/dc/terms/> .
@prefix ore:    <http://www.openarchives.org/ore/terms/> .
@prefix ro:     <http://purl.org/wf4ever/ro#> .
@prefix roterms: <http://purl.org/wf4ever/roterms#> .
@prefix bundle: <http://purl.org/wf4ever/bundle#> .
@prefix prov:   <http://www.w3.org/ns/prov#> .
@prefix pav:    <http://purl.org/pav/> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix owl:    <http://www.w3.org/2002/07/owl#> .
@prefix doi:    <http://dx.doi.org/> .

:ResearchObjectShape a sh:NodeShape ;
    sh:targetClass ro:ResearchObject ;
    sh:or (
        [
            sh:path dct:creator ;
            sh:minCount 1
        ]
        [
            sh:path pav:createdBy ;
            sh:minCount 1
        ]
    ) ;
    sh:or (
        [
            sh:path dct:created ;
            sh:datatype xsd:dateTime ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
        [
            sh:path pav:createdOn ;
            sh:datatype xsd:dateTime ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
    ) ;
    sh:property [
        sh:path ore:isDescribedBy ;
        sh:nodeKind sh:IRI ;
        sh:maxCount 1
    ] ;
    sh:property [
        sh:path ro:rootFolder ;
        sh:nodeKind sh:IRI
    ] .

:AggregationShape a sh:NodeShape ;
    sh:targetClass ore:Aggregation ;
    sh:property [
        sh:path ore:aggregates ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1
    ] .
    # TODO: add `ore:describedBy` property for subjects that are aggregations
    #       AND research objects

:ManifestShape a sh:NodeShape ;
    sh:targetClass ro:Manifest ;
    sh:property [
        sh:path ore:describes ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:maxCount 1
        # TODO: ensure that inverse constraint matches up
    ] ;
    sh:or (
        [
            sh:path dct:creator ;
            sh:minCount 1
        ]
        [
            sh:path pav:createdBy ;
            sh:minCount 1
        ]
    ) ;
    sh:or (
        [
            sh:path dct:created ;
            sh:datatype xsd:dateTime ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
        [
            sh:path pav:createdOn ;
            sh:datatype xsd:dateTime ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
    ) .

:ProxyShape a sh:NodeShape ;
    sh:targetClass ro:Proxy, ore:Proxy ;
    sh:property [
        sh:path ore:proxyFor ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:maxCount 1
    ] ;
    sh:property [
        sh:path ore:proxyIn ;
        sh:nodeKind sh:IRI ;
        sh:minCount 1 ;
        sh:maxCount 1
    ] .

:AnnotationShape a sh:NodeShape ;
    sh:targetClass oa:Annotation, ro:Annotation ;
    sh:or (
        [
            sh:path ao:body ;
            sh:nodeKind sh:IRI ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
        [
            sh:path oa:hasBody ;
            sh:nodeKind sh:IRI ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
    ) ;
    sh:or (
        [
            sh:path ao:annotatesResource ;
            sh:nodeKind sh:IRI ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
        [
            sh:path ro:annotatesAggregatedResource ;
            sh:nodeKind sh:IRI ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
        [
            sh:path oa:hasTarget ;
            sh:nodeKind sh:IRI ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
    ) ;
    sh:or (
        [
            sh:path dct:creator ;
            sh:minCount 1
        ]
        [
            sh:path pav:createdBy ;
            sh:minCount 1
        ]
    ) ;
    sh:or (
        [
            sh:path dct:created ;
            sh:datatype xsd:dateTime ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
        [
            sh:path pav:createdOn ;
            sh:datatype xsd:dateTime ;
            sh:minCount 1 ;
            sh:maxCount 1
        ]
    ) .

:ResourceShape a sh:NodeShape ;
    sh:targetClass ro:Resource .

:AggregatedAnnotationShape a sh:NodeShape ;
    sh:targetClass ro:AggregatedAnnotation .

:FolderShape a sh:NodeShape ;
    sh:targetClass ro:Folder ;
    sh:property [
        sh:path ore:isDescribedBy ;
        sh:nodeKind sh:IRI ;
        sh:maxCount 1
    ] .

:FolderEntryShape a sh:NodeShape ;
    sh:targetClass ro:FolderEntry ;
    sh:property [
        sh:path ro:entryName ;
        sh:minCount 1 ;
        sh:maxCount 1
    ] .
