---
redirect_from: /cwl-profile
---
@prefix :       <cwl-profile#> .
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:     <http://www.w3.org/ns/shacl#> .
@prefix ro:     <http://purl.org/wf4ever/ro#> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix prov:   <http://www.w3.org/ns/prov#> .
@prefix ore:    <http://www.openarchives.org/ore/terms/> .

:CWLResearchObjectShape a sh:NodeShape ;
    sh:targetClass ro:ResearchObject, ore:Aggregation ;
    sh:property [
        sh:path ore:aggregates ;
        sh:minCount 1 ;
        sh:message "Research Object must aggregate at least one file"
    ] ;
    sh:property [
        sh:path ore:isDescribedBy ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:message "Research Object should have exactly one 'manifest' property"
    ] ;
    sh:property [
        sh:path ore:isDescribedBy ;
        sh:hasValue </metadata/manifest.json> ;
        sh:message "Manifest path is not /metadata/manifest.json"
    ] ;
    sh:property [
        sh:path ore:isDescribedBy ;
        sh:class ro:Manifest ;
        sh:message "Target of 'manifest' property should have type ro:Manifest"
    ] .
